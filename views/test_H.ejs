<div class="d-flex justify-content-between bg-secondary text-white">
    <div class="p-2">
        <span class="badge badge-primary">Report : </span>
            <span class="font-weight-bold"> <%=title %></span> 
    </div>
    <div class="dtcalender">
        <% if(locals.calender) { %>
            <form class="form-inline m-2 " method="post">
                <input class="form-control mr-sm-2 form-control-sm" type="date"
                     placeholder="Search" aria-label="Search" name="fromDt"
                      value="<%= calender.startOfMonth%>">
                <span> -- </span>
                <input class="form-control mr-sm-2 form-control-sm" type="date" 
                placeholder="Search" aria-label="Search" name="toDt" value="<%= calender.endOfMonth%>">
                <button class="btn btn-success my-2 my-sm-0 btn-sm" type="submit">Get Data</button>
            </form>
            <% } %>  
    </div>
</div>